{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@tsconfig/node14/tsconfig.json"],
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "working-files",
        "dist"
    ]
}